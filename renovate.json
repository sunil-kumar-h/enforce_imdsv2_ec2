{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  /* --- Discover image references in ANY file --- */
  "customManagers": [
    {
      "customType": "regex",
      "description": "Datadog Agent image references anywhere",
      "fileMatch": ["^.*$"],
      "matchStrings": [
        "(?<depName>public\\.ecr\\.aws/datadog/agent):(?<currentValue>[A-Za-z0-9._-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "registryUrlTemplate": "https://public.ecr.aws"
    },
    {
      "customType": "regex",
      "description": "AWS for Fluent Bit image references anywhere",
      "fileMatch": ["^.*$"],
      "matchStrings": [
        "(?<depName>public\\.ecr\\.aws/aws-observability/aws-for-fluent-bit):(?<currentValue>[A-Za-z0-9._-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "registryUrlTemplate": "https://public.ecr.aws"
    }
  ],

  /* --- Update rules --- */
  "packageRules": [
    /* Datadog Agent: prefer numeric x.y.z; allow upgrades to newest numeric tag */
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["public.ecr.aws/datadog/agent"],
      "versioning": "semver",
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+$/",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Datadog Agent (numeric)"
    },

    /* AWS for Fluent Bit: prefer numeric x.y.z; allow upgrades to newest numeric tag */
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["public.ecr.aws/aws-observability/aws-for-fluent-bit"],
      "versioning": "semver",
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+$/",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "AWS for Fluent Bit (numeric)"
    },

    /* Optional: group digest+version updates together to avoid two separate PRs */
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest", "major", "minor", "patch"],
      "groupName": "{{depName}} Docker updates"
    }
  ]
}
