{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  /* 1) Discover image references in ANY file */
  "customManagers": [
    {
      "customType": "regex",
      "description": "Datadog Agent image references anywhere",
      "fileMatch": ["^.*$"],
      "matchStrings": [
        "(?<depName>public\\.ecr\\.aws/datadog/agent):(?<currentValue>[A-Za-z0-9._-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "registryUrlTemplate": "https://public.ecr.aws"
    },
    {
      "customType": "regex",
      "description": "AWS for Fluent Bit image references anywhere",
      "fileMatch": ["^.*$"],
      "matchStrings": [
        "(?<depName>public\\.ecr\\.aws/aws-observability/aws-for-fluent-bit):(?<currentValue>[A-Za-z0-9._-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "registryUrlTemplate": "https://public.ecr.aws"
    }
  ],

  /* 2) Version policies (no matchUpdateTypes here) */
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["public.ecr.aws/datadog/agent"],
      "versioning": "semver",
      "allowedVersions": "/^7\\.[0-9]+\\.[0-9]+$/",
      "groupName": "Datadog Agent 7.x"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["public.ecr.aws/aws-observability/aws-for-fluent-bit"],
      "versioning": "semver",
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+$/",
      "groupName": "AWS for Fluent Bit (numeric)"
    },

    /* 3) Optional: one group name for any other docker updates you detect */
    {
      "matchDatasources": ["docker"],
      "groupName": "Docker image updates"
    }
  ]
}
